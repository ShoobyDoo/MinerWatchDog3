                            </Button>

                        </Grid>-->
                        <!--#endregion-->

                    </Grid>
                </Grid>
                
                <!-- MINER PROCESSES GRID -->
                <Grid x:Name="gridMinerProcesses" Visibility="Hidden" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="1"
                        Background="#141419"
                        Margin="5"
                        CornerRadius="5"/>

                    <Border CornerRadius="5"
                            Grid.Row="0"
                            Margin="5,5,5,0"
                            Background="#353340"/>

                    <Grid>

                        <TextBox Grid.Row="0"
                                 x:Name="txtProcessesSearch"
                                 x:FieldModifier="public"
                                 Margin="15,5,15,0"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 BorderThickness="0"
                                 VerticalScrollBarVisibility="Visible"
                                 Height="35"
                                 Foreground="#EAECEB"
                                 Background="Transparent"
                                 FontFamily="Consolas"
                                 FontSize="16" 
                                 TextChanged="txtProcessesSearch_TextChanged"/>
                        
                        <TextBlock IsHitTestVisible="False"
                                       Text="Search"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="18,5,5,0"
                                       Foreground="DarkGray"
                                 Background="Transparent"
                                 FontFamily="Consolas"
                                 FontSize="16"
                                       Grid.Column="1">

                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtProcessesSearch}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                    </Grid>
                    
                    <TextBox Grid.Row="1"
                           x:Name="txtProcesses"
                           x:FieldModifier="public"
                           Margin="5"
                         BorderThickness="0"
                         VerticalScrollBarVisibility="Visible"
                         TextWrapping="Wrap"
                           Foreground="#EAECEB"
                         Background="Transparent"
                           FontFamily="Consolas"
                           FontSize="14"
                           IsReadOnly="True"/>

                </Grid>

                <!-- MINER DEBUG GRID -->
                <Grid x:Name="gridMinerDebug" Visibility="Hidden" Grid.Row="1">

                    <Border Grid.Row="0"
                        Background="#141419"
                        Margin="5"
                        CornerRadius="5"/>
                    
                    <TextBox Grid.Row="0"
                               x:Name="txtDebug"
                             VerticalScrollBarVisibility="Visible"
                               x:FieldModifier="public"
                             TextWrapping="Wrap"
                               Margin="5"
                             BorderThickness="0"
                             Background="Transparent"
                               FontFamily="Consolas"
                               FontSize="14"
                               Foreground="#EAECEB"
                             IsReadOnly="True"/>
                </Grid>

            </Grid>

            <!-- SETTINGS GRID CONTENT -->
            <Grid x:Name="gridSettings" Visibility="Hidden" Grid.Column="1" Grid.Row="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Margin="5,0,5,0" 
                        CornerRadius="5"
                        Background="#201f2e">

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Grid.Row="0">

                        <RadioButton Content="General"
                                     x:Name="rbSettingsGeneral"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}" 
                                     FontFamily="{StaticResource Manrope}" 
                                     Checked="rbSettingsGeneral_Checked"/>

                        <RadioButton Content="Miner Configuration"
                                     x:Name="rbSettingsMiner"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}" 
                                     FontFamily="{StaticResource Manrope}" 
                                     Checked="rbSettingsMiner_Checked"/>

                        <RadioButton Content="System"
                                     x:Name="rbSettingsSystem"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}"
                                     FontFamily="{StaticResource Manrope}"
                                     Checked="rbSettingsSystem_Checked"/>

                        <RadioButton Content="GPU OC/UC"
                                     x:Name="rbSettingsGPU"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}"
                                     FontFamily="{StaticResource Manrope}" 
                                     Checked="rbSettingsGPU_Checked"/>

                    </StackPanel>
                </Border>
                <!--#endregion-->

                <!--#region SETTINGS / GENERAL -->
                <Grid Grid.Row="1" Visibility="Visible" x:Name="gridSettingsGeneral"  Background="Transparent" Margin="0,5">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>

                    <!--#region SETTINGS DISPLAY-->
                    <Label Grid.Column="0"
                           Grid.Row="0"
                           Content="Keep mining while running"
                           FontFamily="{StaticResource Manrope}"
                           FontSize="16"
                           FontWeight="Regular"
                           HorizontalAlignment="Center"
                           Foreground="#EAECEB"/>

                    <Separator Grid.Column="0"
                               VerticalAlignment="Bottom"
                               Margin="5,0"/>

                    <Label Grid.Column="1"
                           Grid.Row="0"
                           Content="Stop mining while running"
                           FontFamily="{StaticResource Manrope}"
                           FontSize="16"
                           FontWeight="Regular"
                           HorizontalAlignment="Center"
                           Foreground="#EAECEB"/>

                    <Separator Grid.Column="1"
                               VerticalAlignment="Bottom"
                               Margin="5,0"/>

                    <Border Grid.Row="1"
                            Grid.Column="0"
                        Margin="5,5,5,5" 
                        CornerRadius="10"
                        Background="#353340"/>

                    <TextBox Grid.Row="1"
                               x:Name="rtbAllowed"
                               Grid.Column="0"
                             VerticalScrollBarVisibility="Auto"
                               Margin="10,10,10,10"
                               FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                             IsReadOnly="True"
                               Foreground="#EAECEB"
                               Background="Transparent"
                               BorderThickness="0"/>

                    <Border Grid.Row="1"
                            Grid.Column="1"
                        Margin="5,5,5,5"
                        CornerRadius="10"
                        Background="#353340"/>

                    <TextBox Grid.Row="1"
                               Grid.Column="1"
                               x:Name="rtbPrevented"
                               Margin="10,10,10,10"
                             VerticalScrollBarVisibility="Auto"
                               FontFamily="{StaticResource Manrope}"
                             IsReadOnly="True"
                               FontSize="16"
                               Foreground="#EAECEB"
                                 Background="Transparent"
                               BorderThickness="0"/>
                    <!--#endregion-->

                    <!--#region INPUTS (ALLOWED ADD) -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85*"/>
                            <ColumnDefinition Width="25*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="2" 
                            Margin="5,5,5,5" 
                            CornerRadius="10" 
                            Background="#353340"/>

                        <TextBox Grid.Row="2"
                               Grid.Column="0"
                               x:Name="txtAllowedAddInput"
                             VerticalAlignment="Stretch"
                               Margin="10"
                               FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                               Foreground="#EAECEB"
                             Background="Transparent"
                               BorderThickness="0"/>

                        <Button Grid.Column="2"
                            Margin="5,5,5,5"
                            x:Name="btnAllowedAdd"
                            Background="#353340"
                            Foreground="#EAECEB"
                                VerticalContentAlignment="Center"
                            Content="Add"
                            FontFamily="{StaticResource Manrope}"
                            FontSize="16" 
                            Click="btnAllowedAdd_Click"
                                Style="{DynamicResource SettingsButton}">

                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>

                        </Button>
                    </Grid>
                    <!--#endregion-->

                    <!--#region INPUTS (ALLOWED REMOVE) -->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85*"/>
                            <ColumnDefinition Width="25*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="2" 
                            Margin="5,5,5,5" 
                            CornerRadius="10" 
                            Background="#353340"/>

                        <TextBox Grid.Row="3"
                               Grid.Column="0"
                               x:Name="txtAllowedRemoveInput"
                             VerticalAlignment="Stretch"
                               Margin="10"
                               FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                               Foreground="#EAECEB"
                               Background="Transparent"
                               BorderThickness="0"/>

                        <Button Grid.Row="3"
                                Grid.Column="2"
                            Margin="5,5,5,5"
                            Content="Remove"
                            x:Name="btnAllowedRemove"
                            Background="#353340"
                                VerticalContentAlignment="Center"
                            Foreground="#EAECEB"
                            FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                            Style="{DynamicResource SettingsButton}" Click="btnAllowedRemove_Click">

                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>

                        </Button>
                    </Grid>
                    <!--#endregion-->

                    <!--#region INPUTS (PREVENT ADD) -->
                    <Grid Grid.Row="2" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85*"/>
                            <ColumnDefinition Width="25*"/>
                        </Grid.ColumnDefinitions>

                        <Border 
                            Margin="5,5,5,5" 
                            CornerRadius="10" 
                            Background="#353340"/>

                        <TextBox 
                               Grid.Column="0"
                               x:Name="txtPreventAddInput"
                               Margin="10"
                             VerticalAlignment="Stretch"
                               FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                               Background="Transparent"
                               Foreground="#EAECEB"
                               BorderThickness="0" />

                        <Button 
                            Grid.Column="1"
                            Margin="5,5,5,5"
                            x:Name="btnPreventAdd"
                            Content="Add"
                            VerticalContentAlignment="Center"
                            Foreground="#EAECEB"
                            Background="#353340"
                            FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                            Style="{DynamicResource SettingsButton}" Click="btnPreventAdd_Click">

                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>

                        </Button>
                    </Grid>
                    <!--#endregion-->

                    <!--#region INPUTS (PREVENT REMOVE) -->
                    <Grid Grid.Row="3" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85*"/>
                            <ColumnDefinition Width="25*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="2" 
                            Margin="5,5,5,5" 
                            CornerRadius="10" 
                            Background="#353340"/>

                        <TextBox Grid.Column="0"
                               x:Name="txtPreventRemoveInput"
                               Margin="10"
                               FontFamily="{StaticResource Manrope}"
                             VerticalAlignment="Stretch"
                               FontSize="16"
                               Foreground="#EAECEB"
                               Background="Transparent"
                               BorderThickness="0"/>

                        <Button Grid.Column="1"
                            Margin="5"
                            x:Name="btnPreventRemove"
                            Content="Remove"
                            VerticalContentAlignment="Center"
                            Background="#353340"
                            Foreground="#EAECEB"
                            FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                            Style="{DynamicResource SettingsButton}" Click="btnPreventRemove_Click">

                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>

                        </Button>
                    </Grid>
                    <!--#endregion-->

                    <!--#region (STATUS MESSAGES) -->
                    <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="100*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                           Content="Status:"
                           FontFamily="{StaticResource Manrope}"
                           Margin="5"
                           FontSize="16"
                               Height="35"
                           HorizontalAlignment="Stretch"
                           FontWeight="Regular"
                               VerticalContentAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="#EAECEB"
                           Background="#353340">

                            <Label.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Label.Resources>

                        </Label>

                        <TextBox Grid.Row="4"
                               Grid.Column="1"
                               x:Name="txtStatusMsg"
                               Margin="5,5,5,5"
                             VerticalAlignment="Stretch"
                             IsReadOnly="True"
                               FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                               Foreground="#EAECEB"
