<Window xmlns:User_Controls="clr-namespace:ModernMinerWatchDog.User_Controls"  
        x:Class="ModernMinerWatchDog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Miner WatchDog 3"
        WindowStartupLocation="CenterScreen"
        Height="720" Width="1100"
        MinHeight="650" MinWidth="1050"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="False" 
        Loaded="Window_Loaded" 
        Icon="Images/miner-icon.ico"
        SizeChanged="Window_SizeChanged">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0"
                      CornerRadius="20"
                      CaptionHeight="0"
                      UseAeroCaptionButtons="False"
                      ResizeBorderThickness="7"/>
    </WindowChrome.WindowChrome>

    <Border Background="#272537"
            CornerRadius="10">

        <Grid x:Name="gridMainViews">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="225"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="135"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="3"
                    Grid.Column="2"
                    x:Name="bdrUpdateAvailable"
                    Visibility="Visible"
                    Height="30"
                        Background="LightGoldenrodYellow"
                        Margin="5,0,5,5"
                        CornerRadius="5" 
                    MouseDown="bdrUpdateAvailable_MouseDown" 
                    MouseEnter="bdrUpdateAvailable_MouseEnter" 
                    MouseLeave="bdrUpdateAvailable_MouseLeave"/>

            <TextBlock VerticalAlignment="Center"
                           TextAlignment="Center"
                       IsHitTestVisible="False"
                       HorizontalAlignment="Center"
                       Visibility="Visible"
                       Grid.Column="2"
                            Grid.Row="3"
                           Margin="5,0,5,5"
                            x:Name="txtUpdateAvailable"
                            Foreground="#201f2e"
                            Text="Update available!"
                            FontFamily="{StaticResource Manrope}" 
                            FontSize="16"
                            FontWeight="Bold"/>

            <Border Grid.Row="1" 
                    Margin="5,0,0,0"
                    CornerRadius="0"
                    Background="#201f2e"/>

            <Border Grid.Row="2" 
                    Grid.RowSpan="2"
                    Margin="5,0,0,5" 
                    CornerRadius="0,0,5,5"
                    Background="#201f2e">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6.5*"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>

                    <Separator Grid.Row="1"
                               Background="#59566c"
                               Width="200"
                               VerticalAlignment="Top"
                               Margin="5,5"/>

                    <Grid Grid.Row="1">

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   Grid.Row="0"
                                   Margin="10,19,0,0"
                                   x:Name="txtMinerVersion"
                                   Foreground="#EAECEB"
                                   Text="Status: Can't access miner!"
                                   FontFamily="{StaticResource Manrope}" 
                                   FontSize="13"
                                   FontWeight="Regular" 
                                   MouseEnter="txtMinerVersion_MouseEnter" 
                                   MouseLeave="txtMinerVersion_MouseLeave" 
                                   MouseDown="txtMinerVersion_MouseDown"
                                   ToolTipService.ShowDuration="60000" Grid.RowSpan="2">

                            <TextBlock.ToolTip>
                                <ToolTip x:Name="ttUpdateChangelog"
                                         ToolTipService.ShowDuration="60000"
                                         MaxWidth="500">

                                    <TextBlock x:Name="tbTTUpdateChangelog"
                                               Text="You're on the latest version."
                                               TextWrapping="Wrap"/>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>

                        <TextBlock VerticalAlignment="Top"
                                   Grid.Row="1"
                                   Margin="10,13,10,0"
                                   x:Name="txtLocalMiner"
                                   Foreground="#EAECEB"
                                   Text="Miner: No version found!"
                                   FontFamily="{StaticResource Manrope}" 
                                   FontSize="13"
                                   FontWeight="Regular"/>

                        <TextBlock VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   Grid.Row="2"
                                   Margin="10,5,0,0"
                                   x:Name="txtVersion"
                                   Foreground="#EAECEB"
                                   Text="WatchDog: 0.0.0.0"
                                   FontFamily="{StaticResource Manrope}" 
                                   FontSize="13"
                                   FontWeight="Regular" 
                                   MouseLeave="txtVersion_MouseLeave" 
                                   MouseEnter="txtVersion_MouseEnter" 
                                   MouseDown="txtVersion_MouseDown"
                                   ToolTipService.ShowDuration="60000">

                            <TextBlock.ToolTip>
                                <ToolTip x:Name="ttWdUpdateChangelog"
                                         ToolTipService.ShowDuration="60000"
                                         MaxWidth="500">

                                    <TextBlock x:Name="tbTTWdUpdateChangelog"
                                               Text="You're on the latest version."
                                               TextWrapping="Wrap"/>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>

                    </Grid>
                </Grid>
            </Border>

            <ContentControl Grid.ColumnSpan="2" 
                            MouseDoubleClick="TopBar_DoubleClick">

                <Border Grid.ColumnSpan="2"
                    Background="#201f2e"
                    Margin="5,5,5,0"
                    CornerRadius="5,5,5,0"
                    MouseDown="Border_MouseDown">

                    <StackPanel HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Orientation="Horizontal"
                            Margin="0">

                        <Button Width="45"
                            Height="35"
                                VerticalAlignment="Center"
                            Background="Transparent"
                            Foreground="Gray"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="ButtonMinimize_Click"
                            Style="{DynamicResource WindowButtonTemplate}">

                            <Image Source="Images/minimize.png"/>

                        </Button>

                        <Button Width="45"
                            Height="35" 
                                VerticalAlignment="Center"
                        Background="Transparent"
                        Foreground="Gray"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Click="ButtonMaximize_Click"
                            Style="{DynamicResource WindowButtonTemplate}">

                            <Image Height="25" Source="Images/maximize.png"/>

                        </Button>

                        <Button Width="45"
                            Height="35" 
                                VerticalAlignment="Center"
                            Background="Transparent" 
                            Foreground="Gray"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="ButtonExit_Click" 
                            Style="{DynamicResource CloseButtonTemplate}">

                            <Image Height="25" Source="Images/close.png"/>

                        </Button>

                    </StackPanel>
                </Border>
            </ContentControl>

            <TextBlock Grid.Row="0"
                       Text="Miner WatchDog 3"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="5,5,5,0"
                       Foreground="#EAECEB"
                       FontSize="20" 
                       FontFamily="{StaticResource Manrope}"
                        FontWeight="Bold"
                       IsHitTestVisible="False"/>


            <Image Grid.Row="1" Source="Images/miner-icon.png" Margin="5"/>


            <StackPanel Grid.Row="2">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <RadioButton Content="Miner"
                                 Grid.Row="0"
                                x:Name="rbMiner"
                                Height="50"
                                Foreground="#EAECEB"
                                FontSize="16"
                             FontWeight="Bold"
                                Style="{StaticResource MenuButtonTheme}" 
                                FontFamily="{StaticResource Manrope}"
                                Checked="rbMiner_Checked"/>

                    <Image Source="/Images/miner.png"
                           Width="25"
                           Height="25"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="33,0"
                           IsHitTestVisible="False"/>



                    <RadioButton Content="Settings"
                                 Grid.Row="1"
                                x:Name="rbSettings"
                                Height="50"
                             FontWeight="Bold"
                                Foreground="#EAECEB"
                                FontSize="16"
                                Style="{StaticResource MenuButtonTheme}" 
                                FontFamily="{StaticResource Manrope}"
                                Checked="rbSettings_Checked"/>

                    <Image Source="/Images/settings.png"
                           Width="30"
                           Height="30"
                           Grid.Row="1"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="30,0"
                           IsHitTestVisible="False"/>



                    <RadioButton Content="About"
                                 Grid.Row="2"
                             x:Name="rbAbout"
                             FontWeight="Bold"
                             Height="50"
                             Foreground="#EAECEB"
                             FontSize="16"
                             Style="{StaticResource MenuButtonTheme}" 
                             FontFamily="{StaticResource Manrope}" 
                             Checked="rbAbout_Checked"/>

                    <Image Source="/Images/about.png"
                           Width="30"
                           Height="30"
                           Grid.Row="2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="30,0,0,0"
                           IsHitTestVisible="False"/>

                    <RadioButton Content="Exit"
                                 Grid.Row="3"
                                x:Name="rbExit"
                             FontWeight="Bold"
                                Height="50"
                                Foreground="#EAECEB"
                                FontSize="16"
                                Style="{StaticResource MenuButtonTheme}" 
                                FontFamily="{StaticResource Manrope}" 
                             Checked="rbExit_Checked" />

                    <Image Source="/Images/exit.png"
                           Width="30"
                           Height="30"
                           Grid.Row="3"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="30,0,0,0"
                           IsHitTestVisible="False"/>

                </Grid>


            </StackPanel>

            <!--#region STATUS GRID CONTENT -->
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                        Margin="5,10,5,5"
                        CornerRadius="5"
                        Background="#353340"/>

                    <RichTextBox VerticalContentAlignment="Center"
                                 x:Name="txtStatus"
                                 Grid.Row="0"
                                 Foreground="#EAECEB"
                                 IsReadOnly="True"
                                 HorizontalAlignment="Stretch"
                                 TextBlock.TextAlignment="Center"
                                 VerticalAlignment="Center"
                                 Margin="10,10,10,5"
                                 BorderThickness="0"
                                 Visibility="Visible"
                                 FontFamily="{StaticResource Manrope}"
                                 Background="Transparent"
                                 FontSize="20"/>

                    <Border Grid.Row="1" 
                            Margin="5,5,5,10" 
                            CornerRadius="5"
                            Background="#353340"/>

                    <RichTextBox VerticalContentAlignment="Center"
                                 x:Name="txtMinerStatus"
                                 Grid.Row="1"
                                 Foreground="#EAECEB"
                                 IsReadOnly="True"
                                 HorizontalAlignment="Stretch"
                                 TextBlock.TextAlignment="Center"
                                 VerticalAlignment="Center"
                                 Margin="10,5,10,10"
                                 BorderThickness="0"
                                 Visibility="Visible"
                                 FontFamily="{StaticResource Manrope}"
                                 Background="Transparent"
                                 FontSize="20"/>
                </Grid>
            </Grid>
            <!--#endregion-->

            <!-- MINER GRID CONTENT -->
            <Grid x:Name="gridMiner" Visibility="Visible" Grid.Column="1" Grid.Row="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Margin="5,0,5,0" 
                        CornerRadius="5"
                        Background="#201f2e">

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Grid.Row="0">

                        <RadioButton Content="Console"
                                     x:Name="rbConsole"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}" 
                                     FontFamily="{StaticResource Manrope}" 
                                     Checked="rbConsole_Checked"/>

                        <RadioButton Content="Processes"
                                     x:Name="rbProcesses"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}" 
                                     FontFamily="{StaticResource Manrope}"                                      Checked="rbProcesses_Checked"/>

                        <RadioButton Content="Debug"
                                     x:Name="rbDebug"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}"
                                     FontFamily="{StaticResource Manrope}"                                      Checked="rbDebug_Checked"/>

                    </StackPanel>
                </Border>

                <!-- MINER CONSOLE GRID -->
                <Grid x:Name="gridMinerConsole" Visibility="Visible" Grid.Row="1">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <!--<RowDefinition Height="45"/>-->
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="#141419"
                                Margin="5"
                                CornerRadius="5"/>

                        <RichTextBox Grid.Row="0"
                                     x:Name="txtConsole"
                                     x:FieldModifier="public"
                                     Margin="5"
                                     TextBlock.TextAlignment="Left"
                                     VerticalScrollBarVisibility="Visible"
                                     BorderThickness="0"
                                     TextBlock.LineHeight="1"
                                     FontFamily="Consolas"
                                     Foreground="#EAECEB" 
                                     Background="Transparent"
                                     FontSize="16"
                                     IsReadOnly="True"/>
                    </Grid>
                </Grid>

                <!-- MINER PROCESSES GRID -->
                <Grid x:Name="gridMinerProcesses" Visibility="Hidden" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="1"
                        Background="#141419"
                        Margin="5"
                        CornerRadius="5"/>

                    <Border CornerRadius="5"
                            Grid.Row="0"
                            Margin="5,5,5,0"
                            Background="#353340"/>

                    <Grid>

                        <TextBox Grid.Row="0"
                                 x:Name="txtProcessesSearch"
                                 x:FieldModifier="public"
                                 Margin="15,5,15,0"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 BorderThickness="0"
                                 VerticalScrollBarVisibility="Visible"
                                 Height="35"
                                 Foreground="#EAECEB"
                                 Background="Transparent"
                                 FontFamily="Consolas"
                                 FontSize="16" 
                                 TextChanged="txtProcessesSearch_TextChanged"/>

                        <TextBlock IsHitTestVisible="False"
                                       Text="Search Processes"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="18,5,5,0"
                                       Foreground="DarkGray"
                                 Background="Transparent"
                                 FontFamily="Consolas"
                                 FontSize="16"
                                       Grid.Column="1">

                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtProcessesSearch}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                    </Grid>

                    <TextBox Grid.Row="1"
                           x:Name="txtProcesses"
                           x:FieldModifier="public"
                           Margin="5"
                         BorderThickness="0"
                         VerticalScrollBarVisibility="Visible"
                         TextWrapping="Wrap"
                           Foreground="#EAECEB"
                         Background="Transparent"
                           FontFamily="Consolas"
                           FontSize="14"
                           IsReadOnly="True"/>

                </Grid>

                <!-- MINER DEBUG GRID -->
                <Grid x:Name="gridMinerDebug" Visibility="Hidden" Grid.Row="1">

                    <Border Grid.Row="0"
                        Background="#141419"
                        Margin="5"
                        CornerRadius="5"/>

                    <TextBox Grid.Row="0"
                               x:Name="txtDebug"
                             VerticalScrollBarVisibility="Visible"
                               x:FieldModifier="public"
                             TextWrapping="Wrap"
                               Margin="5"
                             BorderThickness="0"
                             Background="Transparent"
                               FontFamily="Consolas"
                               FontSize="14"
                               Foreground="#EAECEB"
                             IsReadOnly="True"/>
                </Grid>

            </Grid>

            <!-- SETTINGS GRID CONTENT -->
            <Grid x:Name="gridSettings" Visibility="Hidden" Grid.Column="1" Grid.Row="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Margin="5,0,5,0" 
                        CornerRadius="5"
                        Background="#201f2e">

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Grid.Row="0">

                        <RadioButton Content="General"
                                     x:Name="rbSettingsGeneral"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}" 
                                     FontFamily="{StaticResource Manrope}" 
                                     Checked="rbSettingsGeneral_Checked"/>

                        <RadioButton Content="Miner Configuration"
                                     x:Name="rbSettingsMiner"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}" 
                                     FontFamily="{StaticResource Manrope}" 
                                     Checked="rbSettingsMiner_Checked"/>

                        <RadioButton Content="System"
                                     x:Name="rbSettingsSystem"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}"
                                     FontFamily="{StaticResource Manrope}"
                                     Checked="rbSettingsSystem_Checked"/>

                        <RadioButton Content="GPU OC/UC"
                                     x:Name="rbSettingsGPU"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}"
                                     FontFamily="{StaticResource Manrope}" 
                                     Checked="rbSettingsGPU_Checked"/>

                    </StackPanel>
                </Border>
                <!--#endregion-->

                <!--#region SETTINGS / GENERAL -->
                <Grid Grid.Row="1" Visibility="Hidden" x:Name="gridSettingsGeneral"  Background="Transparent" Margin="0,5">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>

                    <!--#region SETTINGS DISPLAY-->
                    <Label Grid.Column="0"
                           Grid.Row="0"
                           Content="Keep mining while running"
                           FontFamily="{StaticResource Manrope}"
                           FontSize="16"
                           FontWeight="Regular"
                           HorizontalAlignment="Center"
                           Foreground="#EAECEB"/>

                    <Separator Grid.Column="0"
                               VerticalAlignment="Bottom"
                               Margin="5,0"/>

                    <Label Grid.Column="1"
                           Grid.Row="0"
                           Content="Stop mining while running"
                           FontFamily="{StaticResource Manrope}"
                           FontSize="16"
                           FontWeight="Regular"
                           HorizontalAlignment="Center"
                           Foreground="#EAECEB"/>

                    <Separator Grid.Column="1"
                               VerticalAlignment="Bottom"
                               Margin="5,0"/>

                    <Border Grid.Row="1"
                            Grid.Column="0"
                        Margin="5,5,5,5" 
                        CornerRadius="10"
                        Background="#353340"/>

                    <TextBox Grid.Row="1"
                               x:Name="rtbAllowed"
                               Grid.Column="0"
                             VerticalScrollBarVisibility="Auto"
                               Margin="10,10,10,10"
                               FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                             IsReadOnly="True"
                               Foreground="#EAECEB"
                               Background="Transparent"
                               BorderThickness="0"/>

                    <Border Grid.Row="1"
                            Grid.Column="1"
                        Margin="5,5,5,5"
                        CornerRadius="10"
                        Background="#353340"/>

                    <TextBox Grid.Row="1"
                               Grid.Column="1"
                               x:Name="rtbPrevented"
                               Margin="10,10,10,10"
                             VerticalScrollBarVisibility="Auto"
                               FontFamily="{StaticResource Manrope}"
                             IsReadOnly="True"
                               FontSize="16"
                               Foreground="#EAECEB"
                                 Background="Transparent"
                               BorderThickness="0"/>
                    <!--#endregion-->

                    <!--#region INPUTS (ALLOWED ADD) -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85*"/>
                            <ColumnDefinition Width="25*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="2" 
                            Margin="5,5,5,5" 
                            CornerRadius="10" 
                            Background="#353340"/>

                        <TextBox Grid.Row="2"
                               Grid.Column="0"
                               x:Name="txtAllowedAddInput"
                             VerticalAlignment="Stretch"
                               Margin="10"
                               FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                               Foreground="#EAECEB"
                             Background="Transparent"
                               BorderThickness="0"/>

                        <Button Grid.Column="2"
                            Margin="5,5,5,5"
                            x:Name="btnAllowedAdd"
                            Background="#353340"
                            Foreground="#EAECEB"
                                VerticalContentAlignment="Center"
                            Content="Add"
                            FontFamily="{StaticResource Manrope}"
                            FontSize="16" 
                            Click="btnAllowedAdd_Click"
                                Style="{DynamicResource SettingsButton}">

                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>

                        </Button>
                    </Grid>
                    <!--#endregion-->

                    <!--#region INPUTS (ALLOWED REMOVE) -->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85*"/>
                            <ColumnDefinition Width="25*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="2" 
                            Margin="5,5,5,5" 
                            CornerRadius="10" 
                            Background="#353340"/>

                        <TextBox Grid.Row="3"
                               Grid.Column="0"
                               x:Name="txtAllowedRemoveInput"
                             VerticalAlignment="Stretch"
                               Margin="10"
                               FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                               Foreground="#EAECEB"
                               Background="Transparent"
                               BorderThickness="0"/>

                        <Button Grid.Row="3"
                                Grid.Column="2"
                            Margin="5,5,5,5"
                            Content="Remove"
                            x:Name="btnAllowedRemove"
                            Background="#353340"
                                VerticalContentAlignment="Center"
                            Foreground="#EAECEB"
                            FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                            Style="{DynamicResource SettingsButton}" Click="btnAllowedRemove_Click">

                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>

                        </Button>
                    </Grid>
                    <!--#endregion-->

                    <!--#region INPUTS (PREVENT ADD) -->
                    <Grid Grid.Row="2" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85*"/>
                            <ColumnDefinition Width="25*"/>
                        </Grid.ColumnDefinitions>

                        <Border 
                            Margin="5,5,5,5" 
                            CornerRadius="10" 
                            Background="#353340"/>

                        <TextBox 
                               Grid.Column="0"
                               x:Name="txtPreventAddInput"
                               Margin="10"
                             VerticalAlignment="Stretch"
                               FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                               Background="Transparent"
                               Foreground="#EAECEB"
                               BorderThickness="0" />

                        <Button 
                            Grid.Column="1"
                            Margin="5,5,5,5"
                            x:Name="btnPreventAdd"
                            Content="Add"
                            VerticalContentAlignment="Center"
                            Foreground="#EAECEB"
                            Background="#353340"
                            FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                            Style="{DynamicResource SettingsButton}" Click="btnPreventAdd_Click">

                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>

                        </Button>
                    </Grid>
                    <!--#endregion-->

                    <!--#region INPUTS (PREVENT REMOVE) -->
                    <Grid Grid.Row="3" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85*"/>
                            <ColumnDefinition Width="25*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="2" 
                            Margin="5"
                            CornerRadius="10" 
                            Background="#353340"/>

                        <TextBox Grid.Column="0"
                               x:Name="txtPreventRemoveInput"
                               Margin="10"
                               FontFamily="{StaticResource Manrope}"
                             VerticalAlignment="Stretch"
                               FontSize="16"
                               Foreground="#EAECEB"
                               Background="Transparent"
                               BorderThickness="0"/>

                        <Button Grid.Column="1"
                            Margin="5"
                            x:Name="btnPreventRemove"
                            Content="Remove"
                            VerticalContentAlignment="Center"
                            Background="#353340"
                            Foreground="#EAECEB"
                            FontFamily="{StaticResource Manrope}"
                               FontSize="16"
                            Style="{DynamicResource SettingsButton}" Click="btnPreventRemove_Click">

                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>

                        </Button>
                    </Grid>
                    <!--#endregion-->

                    <!--#region (STATUS MESSAGES) -->
