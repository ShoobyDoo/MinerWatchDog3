<Window xmlns:User_Controls="clr-namespace:ModernMinerWatchDog.User_Controls"  x:Class="ModernMinerWatchDog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Miner WatchDog 3"
        WindowStartupLocation="CenterScreen"
        Height="700" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True" 
        Activated="Window_Activated" 
        Loaded="Window_Loaded" 
        Icon="Images/miner-icon.ico"
        SizeChanged="Window_SizeChanged">

    <Border Background="#272537"
            CornerRadius="10">

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="225"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="135"/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <Border Grid.Row="1" 
                    Margin="5,0,0,0"
                    CornerRadius="0"
                    Background="#201f2e"/>

            <Border Grid.Row="2" 
                    Margin="5,0,0,5" 
                    CornerRadius="0,0,5,5"
                    Background="#201f2e">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6.5*"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>

                    <Separator Grid.Row="1"
                               VerticalAlignment="Top"
                               Margin="5,5"/>

                    <Grid Grid.Row="1">
                        
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock VerticalAlignment="Center"
                                   Grid.Row="0"
                                   Margin="10,10,10,0"
                                   x:Name="txtMinerVersion"
                                   Foreground="#EAECEB"
                                   Text="Status: Can't access miner!"
                                   FontFamily="{StaticResource Manrope}" 
                                   FontSize="13"
                                   FontWeight="Regular" 
                                   MouseEnter="txtMinerVersion_MouseEnter" 
                                   MouseLeave="txtMinerVersion_MouseLeave" 
                                   MouseDown="txtMinerVersion_MouseDown"
                                   ToolTipService.ShowDuration="60000">

                            <TextBlock.ToolTip>
                                <ToolTip x:Name="ttUpdateChangelog"
                                         ToolTipService.ShowDuration="60000"
                                         MaxWidth="500">

                                    <TextBlock x:Name="tbTTUpdateChangelog"
                                               Text="You're on the latest version."
                                               TextWrapping="Wrap"/>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>

                        <TextBlock VerticalAlignment="Center"
                                   Grid.Row="1"
                                   Margin="10,5,5,5"
                                   x:Name="txtLocalMiner"
                                   Foreground="#EAECEB"
                                   Text="Miner: No version found!"
                                   FontFamily="{StaticResource Manrope}" 
                                   FontSize="13"
                                   FontWeight="Regular"/>
                        
                        <TextBlock VerticalAlignment="Center"
                                   Grid.Row="2"
                                   Margin="10,5,5,10"
                                   x:Name="txtVersion"
                                   Foreground="#EAECEB"
                                   Text="WatchDog: 0.0.0.0"
                                   FontFamily="{StaticResource Manrope}" 
                                   FontSize="13"
                                   FontWeight="Regular"/>
                        
                    </Grid>
                </Grid>
            </Border>


            <Border Grid.ColumnSpan="2"
                    Background="#201f2e"
                    Margin="5,5,5,0"
                    CornerRadius="5,5,5,0"
                    MouseDown="Border_MouseDown">

                <StackPanel HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Orientation="Horizontal"
                            Margin="0">

                    <Button Width="45"
                            Height="35"
                            Background="Transparent"
                            Foreground="Gray"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="ButtonMinimize_Click"
                            Style="{DynamicResource WindowButtonTemplate}">

                        <Image Source="Images/minimize.png"/>

                    </Button>

                    <Button Width="45"
                            Height="35" 
                        Background="Transparent"
                        Foreground="Gray"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Click="ButtonMaximize_Click"
                            Style="{DynamicResource WindowButtonTemplate}">

                        <Image Height="25" Source="Images/maximize.png"/>

                    </Button>

                    <Button Width="45"
                            Height="35" 
                            Background="Transparent" 
                            Foreground="Gray"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="ButtonExit_Click" 
                            Style="{DynamicResource CloseButtonTemplate}">

                        <Image Height="25" Source="Images/close.png"/>

                    </Button>
                    
                </StackPanel>
            </Border>


            <TextBlock Grid.Row="0"
                       Text="Miner WatchDog 3"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="5,5,5,0"
                       Foreground="#EAECEB"
                       FontSize="20" 
                       FontFamily="{StaticResource Manrope}"
                        FontWeight="Bold"/>


            <Image Grid.Row="1" Source="Images/miner-icon.png" Margin="5"/>


            <StackPanel Grid.Row="2">

                <RadioButton Content="Miner"
                                x:Name="rbMiner"
                                Height="50"
                                Foreground="#EAECEB"
                                FontSize="16"
                             FontWeight="Bold"
                                Style="{StaticResource MenuButtonTheme}" 
                                FontFamily="{StaticResource Manrope}"
                                Checked="rbMiner_Checked"/>

                <RadioButton Content="Settings"
                                x:Name="rbSettings"
                                Height="50"
                             FontWeight="Bold"
                                Foreground="#EAECEB"
                                FontSize="16"
                                Style="{StaticResource MenuButtonTheme}" 
                                FontFamily="{StaticResource Manrope}"
                                Checked="rbSettings_Checked"/>

                <RadioButton Content="About"
                             x:Name="rbAbout"
                             FontWeight="Bold"
                             Height="50"
                             Foreground="#EAECEB"
                             FontSize="16"
                             Style="{StaticResource MenuButtonTheme}" 
                             FontFamily="{StaticResource Manrope}" 
                             Checked="rbAbout_Checked"/>

                <RadioButton Content="Exit"
                                x:Name="rbExit"
                             FontWeight="Bold"
                                Height="50"
                                Foreground="#EAECEB"
                                FontSize="16"
                                Style="{StaticResource MenuButtonTheme}" 
                                FontFamily="{StaticResource Manrope}" 
                             Checked="rbExit_Checked" />

            </StackPanel>

            <!--#region STATUS GRID CONTENT -->
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                        Margin="5,10,5,5"
                        CornerRadius="5"
                        Background="#353340"/>

                    <RichTextBox VerticalContentAlignment="Center"
                                 x:Name="txtStatus"
                                 Grid.Row="0"
                                 Foreground="#EAECEB"
                                 IsReadOnly="True"
                                 HorizontalAlignment="Stretch"
                                 TextBlock.TextAlignment="Center"
                                 VerticalAlignment="Center"
                                 Margin="10,10,10,5"
                                 BorderThickness="0"
                                 Visibility="Visible"
                                 FontFamily="{StaticResource Manrope}"
                                 Background="Transparent"
                                 FontSize="20"/>

                    <Border Grid.Row="1" 
                            Margin="5,5,5,10" 
                            CornerRadius="5"
                            Background="#353340"/>

                    <RichTextBox VerticalContentAlignment="Center"
                                 x:Name="txtMinerStatus"
                                 Grid.Row="1"
                                 Foreground="#EAECEB"
                                 IsReadOnly="True"
                                 HorizontalAlignment="Stretch"
                                 TextBlock.TextAlignment="Center"
                                 VerticalAlignment="Center"
                                 Margin="10,5,10,10"
                                 BorderThickness="0"
                                 Visibility="Visible"
                                 FontFamily="{StaticResource Manrope}"
                                 Background="Transparent"
                                 FontSize="20"/>
                </Grid>
            </Grid>
            <!--#endregion-->

            <!-- MINER GRID CONTENT -->
            <Grid x:Name="gridMiner" Visibility="Visible" Grid.Column="1" Grid.Row="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Margin="5,0,5,0" 
                        CornerRadius="5"
                        Background="#201f2e">

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Grid.Row="0">

                        <RadioButton Content="Console"
                                     x:Name="rbConsole"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}" 
                                     FontFamily="{StaticResource Manrope}" 
                                     Checked="rbConsole_Checked"/>

                        <RadioButton Content="Processes"
                                     x:Name="rbProcesses"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}" 
                                     FontFamily="{StaticResource Manrope}"                                      Checked="rbProcesses_Checked"/>

                        <RadioButton Content="Debug"
                                     x:Name="rbDebug"
                                     Height="50"
                                     Foreground="#EAECEB"
                                     FontSize="16"
                                     Style="{StaticResource HorizontalMenuButtonTheme}"
                                     FontFamily="{StaticResource Manrope}"                                      Checked="rbDebug_Checked"/>

                    </StackPanel>
                </Border>

                <!-- MINER CONSOLE GRID -->
                <Grid x:Name="gridMinerConsole" Visibility="Visible" Grid.Row="1">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <!--<RowDefinition Height="45"/>-->
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="#141419"
                                Margin="5"
                                CornerRadius="5"/>

                        <RichTextBox Grid.Row="0"
                                     x:Name="txtConsole"
                                     x:FieldModifier="public"
                                     Margin="5"
                                     VerticalScrollBarVisibility="Visible"
                                     BorderThickness="0"
                                     TextBlock.LineHeight="1"
                                     FontFamily="Consolas"
                                     Foreground="#EAECEB" 
                                     Background="Transparent"
                                     FontSize="14"
                                     IsReadOnly="True" 
                                     TextChanged="txtConsole_TextChanged"/>

                        <!--#region EXPERIMENTAL START/STOP/OVERRIDE -->
                        <!--<Grid Grid.Row="1">

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Row="1" 
                                    Margin="5,0,2.5,5"
                                    x:Name="btnMinerStart"
                                    HorizontalAlignment="Stretch"
                                    Background="#353340"
                                    Foreground="#EAECEB"
                                    Content="Start Miner"
